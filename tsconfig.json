{
  "compilerOptions": {
    "target":                       "es2016",
    "module":                       "commonjs",
    "lib":                          [
      "dom",
      "es2016",
      "esnext.asynciterable"
    ],
    "moduleResolution":             "node",
    "outDir":                       "./build",
    "strict":                       true,
    "strictPropertyInitialization": false,
    "sourceMap":                    true,
    "emitDecoratorMetadata":        true,
    "experimentalDecorators":       true
  },
  "exclude":         [
    "node_modules"
  ],
  "include":         [
    "./src/**/*"
  ]
}
